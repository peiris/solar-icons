{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "es2015", "es2017"],
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
